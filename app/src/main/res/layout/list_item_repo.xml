<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bg_border_bottom">
    <TextView android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="@color/colorLink"
        android:textColor="#333"
        android:textSize="18sp"
        tools:text="vue-date-picker"
         />

    <TextView android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="6dp"
        tools:text="A simple date time picker in vue"
        />

    <TextView android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawableStart="@drawable/ic_star_black_24dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="4dp"
        tools:text="1,203"
        />

    <TextView android:id="@+id/watchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/stars"
        app:layout_constraintTop_toTopOf="@id/stars"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"
        android:layout_marginLeft="8dp"
        tools:text="1,203"
        android:drawablePadding="4dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>